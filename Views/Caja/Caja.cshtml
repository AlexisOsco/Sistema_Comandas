@Html.Partial("cabecera")
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Caja</title>
    <style>
        .body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .btn {
            padding: 10px 15px;
            margin-right: 10px;
            border: none;
            cursor: pointer;
            color: white;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn:hover {
            opacity: 0.9;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table th, table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
            }

            table th {
                background-color: #f4f4f4;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            width: 400px;
        }

            .modal-content h3 {
                margin-top: 0;
            }

        .close {
            float: right;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }
    </style>
</head>
<div class="body">
    <h1>Consulta de Caja</h1>

    <div>
        <button class="btn btn-primary" id="filtros">Filtros</button>   
        <button class="btn btn-success" id="apertura">Apertura</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Acciones</th>
                <th>Número de Cierre</th>
                <th>Fecha de Apertura</th>
                <th>Fecha de Cierre</th>
                <th>Usuario</th>
                <th>Tienda</th>
                <th>Total Ventas (S/)</th>
                <th>Total Ventas ($)</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <button class="btn btn-danger">Cerrar</button>
                </td>
                <td>001-000123</td>
                <td>2024-12-01 08:00</td>
                <td>2024-12-01 18:00</td>
                <td>Juan Pérez</td>
                <td>Tienda Central</td>
                <td>500.00</td>
                <td>100.00</td>
                <td>Activo</td>
            </tr>
        </tbody>
    </table>

    <!-- Modal Filtros -->
    <div id="filtroModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeFiltro">&times;</span>
            <h3>Filtros</h3>
            <div class="form-group">
                <label for="filtro-usuario">Usuario</label>
                <input type="text" id="filtro-usuario" placeholder="Nombre del usuario">
            </div>
            <div class="form-group">
                <label for="filtro-tienda">Tienda</label>
                <input type="text" id="filtro-tienda" placeholder="Nombre de la tienda">
            </div>
            <button class="btn btn-primary">Aplicar Filtros</button>
        </div>
    </div>

    <!-- Modal Apertura -->
    <div id="aperturaModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeApertura">&times;</span>
            <h3>Apertura de Caja</h3>
            <div class="form-group">
                <label for="monto-apertura">Monto Inicial</label>
                <input type="number" id="monto-apertura" placeholder="Ingrese el monto inicial">
            </div>
            <button class="btn btn-success">Guardar</button>
        </div>
    </div>

    <script>
        const filtroModal = document.getElementById("filtroModal");
        const aperturaModal = document.getElementById("aperturaModal");
        const closeFiltro = document.getElementById("closeFiltro");
        const closeApertura = document.getElementById("closeApertura");

        document.getElementById("filtros").addEventListener("click", () => {
            filtroModal.style.display = "flex";
        });

        document.getElementById("apertura").addEventListener("click", () => {
            aperturaModal.style.display = "flex";
        });

        closeFiltro.addEventListener("click", () => {
            filtroModal.style.display = "none";
        });

        closeApertura.addEventListener("click", () => {
            aperturaModal.style.display = "none";
        });

        window.addEventListener("click", (event) => {
            if (event.target === filtroModal) {
                filtroModal.style.display = "none";
            } else if (event.target === aperturaModal) {
                aperturaModal.style.display = "none";
            }
        });
    </script>
</div>
</html>
