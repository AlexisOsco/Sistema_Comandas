@Html.Partial("cabecera")

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Comanda</title>
	<link href="~/js/comanda/comandas.css" rel="stylesheet" />
	<script src="~/js/comanda/comanda_view.js"></script>
</head>
<body>
    <div class="body">
        <div class="container p-15" >
            <div class="card w-75vw Mesas" id="mesas" style="margin:0px auto;">
                <div class="centrado" id="piso1" onclick="F_SeleccionarPiso('mesas_1')">
                    <div class="card title" >Piso 1</div>
                    <div class="grid-mesas" id="mesas_1" style="display:none;">
                        <div class="cmp1 forma-mesa" onclick="F_Seleccionar_Lugar(1,1)">1</div>
                        <div class="cmp2 forma-mesa" onclick="F_Seleccionar_Lugar(2,1)">2</div>
                        <div class="cmp3 forma-mesa" onclick="F_Seleccionar_Lugar(3,1)">3</div>
                        <div class="cmp4 forma-mesa" onclick="F_Seleccionar_Lugar(4,1)">4</div>
                        <div class="cmp5 forma-mesa" onclick="F_Seleccionar_Lugar(5,1)">5</div>
                        <div class="cmp6 forma-mesa" onclick="F_Seleccionar_Lugar(6,1)">6</div>
                        <div class="cmp7 forma-mesa" onclick="F_Seleccionar_Lugar(7,1)">7</div>
                        <div class="cmp8 forma-mesa" onclick="F_Seleccionar_Lugar(8,1)">8</div>
                    </div>
                </div>
                <div class="centrado" id="piso2" onclick="F_SeleccionarPiso('mesas_2')">
                    <div class="card title">Piso 2</div>
                    <div class="grid-mesas" id="mesas_2" style="display:none;">
                        <div class="cmp1 forma-mesa" onclick="F_Seleccionar_Lugar(1,2)">1</div>
                        <div class="cmp2 forma-mesa" onclick="F_Seleccionar_Lugar(2,2)">2</div>
                        <div class="cmp3 forma-mesa" onclick="F_Seleccionar_Lugar(3,2)">3</div>
                        <div class="cmp4 forma-mesa" onclick="F_Seleccionar_Lugar(4,2)">4</div>
                        <div class="cmp5 forma-mesa" onclick="F_Seleccionar_Lugar(5,2)">5</div>
                        <div class="cmp6 forma-mesa" onclick="F_Seleccionar_Lugar(6,2)">6</div>
                        <div class="cmp7 forma-mesa" onclick="F_Seleccionar_Lugar(7,2)">7</div>
                        <div class="cmp8 forma-mesa" onclick="F_Seleccionar_Lugar(8,2)">8</div>
                    </div>
                </div>
                <div class="centrado" id="terraza" onclick="F_SeleccionarPiso('mesas_3')">
                    <div class="card title">Terraza</div>
                    <div class="grid-mesas" id="mesas_3" style="display:none;">
                        <div class="cmp1 forma-mesa" onclick="F_Seleccionar_Lugar(1,3)">1</div>
                        <div class="cmp2 forma-mesa" onclick="F_Seleccionar_Lugar(2,3)">2</div>
                        <div class="cmp3 forma-mesa" onclick="F_Seleccionar_Lugar(3,3)">3</div>
                        <div class="cmp4 forma-mesa" onclick="F_Seleccionar_Lugar(4,3)">4</div>
                        <div class="cmp5 forma-mesa" onclick="F_Seleccionar_Lugar(5,3)">5</div>
                        <div class="cmp6 forma-mesa" onclick="F_Seleccionar_Lugar(6,3)">6</div>
                        <div class="cmp7 forma-mesa" onclick="F_Seleccionar_Lugar(7,3)">7</div>
                        <div class="cmp8 forma-mesa" onclick="F_Seleccionar_Lugar(8,3)">8</div>
                    </div>
                </div>
            </div>
            <!-- Sección de productos -->
            <div class="card w-100percent orden-grid" id="orden">
                <div class="cmp1 products">
                    <div class="products-header">
                        <input type="text" placeholder="Search products">
                        <select>
                            <option value="all">Category</option>
                            <option value="pizza">Pizza</option>
                            <option value="pasta">Pasta</option>
                            <option value="dessert">Dessert</option>
                            <option value="dessert">Hamburger</option>
                        </select>
                    </div>
                    <div class="product-list">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/60" alt="Product">
                            <div class="product-info">
                                <h4>Bufalina Pizza</h4>
                                <p>$8.50 - $12.8000000</p>
                            </div>
                        </div>
                        <div class="product-card">
                            <img src="https://via.placeholder.com/60" alt="Product">
                            <div class="product-info">
                                <h4>Caprese Pasta</h4>
                                <p>$4.99</p>
                            </div>
                        </div>
                        <div class="product-card">
                            <img src="https://via.placeholder.com/60" alt="Product">
                            <div class="product-info">
                                <h4>Margherita Pizza</h4>
                                <p>$9.50</p>
                            </div>
                        </div>
                        <div class="product-card">
                            <img src="https://via.placeholder.com/60" alt="Product">
                            <div class="product-info">
                                <h4>Spaghetti Bolognese</h4>
                                <p>$7.99</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sección de la orden -->
                <div class="cmp2 order">
                    <div class="order-header">New Order</div>
                    <div class="order-list">
                        <!-- Items de la orden, siguen en formato lista -->
                        <div class="order-item">
                            <div class="product-info">
                                <h4>Caprese Pasta</h4>
                                <p>$4.99</p>
                            </div>
                            <div class="quantity">
                                <button>-</button>
                                <span>2</span>
                                <button>+</button>
                            </div>
                            <span class="subtotal">$9.98</span>
                        </div>
                        <div class="order-item">
                            <div class="product-info">
                                <h4>Italian Market</h4>
                                <p>$12.80</p>
                            </div>
                            <div class="quantity">
                                <button>-</button>
                                <span>1</span>
                                <button>+</button>
                            </div>
                            <span class="subtotal">$12.80</span>
                        </div>
                    </div>
                    <div class="order-summary">
                        <p>Subtotal: <span>$37.47</span></p>
                        <p>Discounts: <span>-$0.30</span></p>
                        <p>Tax (15%): <span>$5.58</span></p>
                        <p class="total">Total: <span>$42.75</span></p>
                    </div>
                    <div class="order-actions">
                        <button class="cancel-btn">Cancel</button>
                        <button class="checkout-btn">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
